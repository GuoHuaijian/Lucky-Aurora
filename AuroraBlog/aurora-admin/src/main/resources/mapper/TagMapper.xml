<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aurora.admin.mapper.TagMapper">
    <resultMap id="BaseResultMap" type="com.aurora.admin.domain.Tag">
        <!--@mbg.generated-->
        <!--@Table dbblog.tag-->
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="type" jdbcType="INTEGER" property="type"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        id, `name`, `type`
    </sql>
    <select id="listByLinkId" resultType="com.aurora.admin.domain.Tag">
        select bt.* from tag bt left join tag_link bat on bt.id=bat.tag_id
        <where>
            <if test="linkId!=null">
                and bat.link_id = #{linkId}
            </if>
            <if test="type!=null">
                and bt.type = #{type}
            </if>
        </where>
    </select>
</mapper>
